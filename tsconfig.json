{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "src",
    "paths": {
      "@/*": ["src/*"] // enables us to use @components/MyComponent
    }
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"],
  "include": ["src/**/*.ts"]
}
